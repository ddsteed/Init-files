#!/usr/bin/env  zsh
#
#-----------------------------------------------------------------------
# This script is to update all Mac/Linux softwares
#
# Author: Hao Feng (F1)
# Date:   Mar. 13, 2022
#
# Copyright (c) 2022, RDS
#-----------------------------------------------------------------------

if [[ `uname` == "Darwin" ]]; then
    update=(mac abrew ibrew aconda mconda)
elif [[ `uname` == "Linux" ]]; then
    update=(apt)
fi

echoline () {
    echo "--------------------------------------------"
}
    
num=0
total=${#update[@]}

for mission in ${update[@]}; do
    let num++
    echo
    echoline
    echo " [$num/$total]: "

    case $mission in
        mac)
            echo " Updating Mac OS system & softwares ... "
            echoline
            
            softwareupdate --all --install --force
            ;;
        abrew)
            echo " Updating Homebrew (arm) applications ... "
            echoline
            
            source  ~/Init/arm
            yes yes | abrewup
            abrew cleanup
            ;;
        ibrew)
            echo " Updating Homebrew (x86_64) applications ... "
            echoline
            
            source ~/Init/x86
            yes yes | ibrewup
            ibrew cleanup
            ;;
        aconda)
            echo " Updating anaconda ... "
            echoline
            
            source ~/Init/aconda
            yes yes | condaup
            yes yes | acondaup
            conda clean --all --yes
            ;;
        mconda)
            echo " Updating miniconda ... "
            echoline
            
            source ~/Init/mconda
            yes yes | condaup
            conda clean --all --yes
            ;;
        apt)
            echo " Updating Ubuntu Linux apt softwares ... "
            echoline
            sudo apt-get update -y && sudo apt-get upgrade -y
            sudo apt-get autoremove
            ;;
    esac
done
