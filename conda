#!/usr/bin/env zsh
#-----------------------------------------------------------------------
# This script is to iniatize conda environment
#
# Author: Hao Feng (F1)
# Date:   Apr. 21, 2022
#
# Copyright (c) 2022, RDS
#
#
# For Apple M1 Silicon CPU:
#   - arm:
#       mforge:  miniforge
#       mbforge: mambaforge
#       ai:      AI envs
#       mconda:  miniconda3
#       dcmenv:  dcm conda environment
#   - x86_64:
#       aconda:  anaconda3
#       rconda:  ROS envs
#-----------------------------------------------------------------------

runname=`basename $0`
os=`uname`

conda_home=/opt/conda
ai_home=/opt/AI/envs
ros_home=/opt/ros/conda_venv

if [[ $os == Darwin ]]; then
  condabase=${conda_home}/miniforge3
elif [[ $os == Linux ]]; then
  condabase=${conda_home}/miniconda3
fi

create_conda () {                                        
    name=$1                                              
                                                         
    if [[ ! -f $name ]]; then                            
        init_conda $condabase
        conda create -y -p $name                         
    fi                                                   
                                                         
    conda activate $name                                 
    conda install -y mamba -c conda-forge                
    conda config --env --add channels conda-forge        
}                                                        
                                                         
init_conda () {
    env=$1
    if [[ -f $env/etc/profile.d/conda.sh ]]; then
        source $env/etc/profile.d/conda.sh
        conda activate $env
    else
        echo
        echo "$env does NOT exist, create it firstly."
        echo "----------------------------------------------------"
        echo
        create_conda $env
    fi
}

case $runname in
    dcmenv)
        export condaenv=/Users/fengh/Research/FORECAST/DCM/envs
        ;;
    mforge)
        export condaenv=${conda_home}/miniforge3
        ;;
    mbforge)
        export condaenv=${conda_home}/mambaforge
        ;;
    ai | aiconda)
        export condaenv=${ai_home}
        ;;
    rconda)
        export condaenv=${ros_home}
        ;;
    mconda)
        export condaenv=${conda_home}/miniconda3
        export PATH=${conda_home}/miniconda3/bin:$PATH
        ;;
    aconda)
        export condaenv=${conda_home}/anaconda3
        export PATH=${conda_home}/anaconda3/bin:$PATH
        ;;
    conda)
        export condaenv=${conda_home}/anaconda3
        export PATH=${conda_home}/anaconda3/bin:$PATH
        ;;
esac
init_conda $condaenv

condabin=`dirname $CONDA_EXE`

condauc () {
    if command -v mamba &> /dev/null
    then
        mamba $1 --all -y
    else
        conda $1 --all -y
    fi
}

condaup () {
    condauc update
}

condaclean () {
    condauc clean
}

acondaup () {
    conda update anaconda --all -y
}

cdea () {
    conda deactivate
}

cact () {
    conda activate $1
}

cinfo () {
    conda info
}

cel () {
    conda env list
}

jnb () {
    $condabin/jupyter-notebook
}

jlab () {
    $condabin/jupyter-lab
}

pynv () {
    Open /Applications/Anaconda-Navigator.app
}

install_conda_basic () {                                 
    basic=(jupyter matplotlib numpy pandas scipy seaborn)
    mamba install -y -c conda-forge ${basic[@]}          
}                                                        
