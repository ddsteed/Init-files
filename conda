#!/usr/bin/env zsh

runname=`basename $0`

init_conda () {
    env=$1
    if [[ -f $env/etc/profile.d/conda.sh ]]; then
        source $env/etc/profile.d/conda.sh
        conda activate $env
    else
        echo
        echo "$env does NOT exist, create it firstly."
        echo "----------------------------------------------------"
        echo
    fi
}

case $runname in
  ai | aiconda)
      init_conda /opt/AI/envs
      ;;
  rconda)
      init_conda /opt/ros/envs
      ;;
  mconda)
      init_conda /opt/miniconda3
      export PATH=/opt/miniconda3/bin:$PATH
      ;;
  aconda)
      init_conda /opt/anaconda3
      export PATH=/opt/anaconda3/bin:$PATH
      ;;
  conda)
      init_conda /opt/anaconda3
      export PATH=/opt/anaconda3/bin:$PATH
      ;;
esac

condabin=`dirname $CONDA_EXE`

condaup () {
  conda update --all
}

acondaup () {
  conda update anaconda --all
}

cdea () {
  conda deactivate
}

cact () {
  conda activate
}

cinfo () {
  conda info
}

cel () {
  conda env list
}

jnb () {
  $condabin/jupyter-notebook
}

jlab () {
  $condabin/jupyter-lab
}

pynv () {
  Open /Applications/Anaconda-Navigator.app
}

